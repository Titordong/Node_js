.box{
  width: 100%;
  display: flex;
  flex-direction: column;
  /* width: 100%; */
  background: green;
}
.day{
  display: flex;
  flex-direction: row;
  /* width: 100%; */
  background: grey;
}
.time{
  width: 100rpx;
  display: flex;
  flex-direction: column;
  /* width: 100%; */
  background: grey;
}
.daybox{
  margin: 10rpx;
}
.timebox{
  width: 50rpx;
}

.table {

  border: 0px solid darkgray;

}

.tr {
  display: flex;
  width: 100%;
  justify-content: center; 
  height: 3rem;
  align-items: center; 
}
.dayborder{
  border-right:white;
  border-style:solid; 
  border-width: 1rpx;
}
.timeborder{
  border-top:white;
  border-style:solid; 
  border-width: 1rpx;
}
.selected{
  background: rgba(255, 0, 0, 0.582);
}
.td {
  width: 100%;
  justify-content: center;
  text-align: center; 
  display: flex;
  height: 3rem;
  align-items: center;
  border-radius: 10rpx;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.thcolor{
  background: rgb(86, 121, 228);
  color: #fff;
}
.th {
  width: 100%;
  justify-content: center;
  
  display: flex;
  height: 3rem;
  align-items: center
}
.first{
  width: 120rpx;
  background:  rgb(86, 121, 228);
  color: #fff;
  height: 3rem;
}